{
  "name": "trilogy",
  "dockerFile": "Dockerfile",
  "hostRequirements": {
    // smallest size
    "storage": "32gb",
    "memory": "4gb"
  },
  "remoteEnv": {
    "MYSQL_USER": "codespaces",
  },
  "forwardPorts": [3306],
  "features": {
    "ghcr.io/devcontainers/features/sshd:1": {
      "version": "latest"
    },
    "ghcr.io/devcontainers/features/github-cli:1":{
      "version": "latest"
    }
  },
  "portsAttributes": {
    "3306": {
      "label": "mysql"
    },
  },
  "postCreateCommand": "service mysql start"
}

